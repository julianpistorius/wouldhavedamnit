{
	"name": "Would -HAVE- damnit!",
	"version": "0.0.1",
	"manifest_version" : 2,
	"description": "Would/Could/Should -HAVE- (not OF)",
	"background" : {
		"page" : "background.html"
	},
	"page_action" :
	{
		"default_icon": {
			"19": "icons/19.png",
			"38": "icons/38.png"
		},
		"default_title" : "SAMPLE_TITLE",
		"default_popup" : "fragments/popup.html"
	},
	"content_scripts": [
	{
		"matches": ["http://*/*", "https://*/*"],
		"js": ["lib/jquery-2.1.1.min.js","scripts/main.js"],
		"run_at": "document_idle"
	}
	],
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"options_page" : "fancy-settings/source/index.html"
}
